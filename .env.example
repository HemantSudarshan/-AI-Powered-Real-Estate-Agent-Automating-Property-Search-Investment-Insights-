# ===========================================
# AI Real Estate Agent - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# ===========================================

# -------------------------------------------
# Application Settings
# -------------------------------------------
APP_ENV=development
# Options: development, staging, production

DEBUG_MODE=false
# Enable debug mode (true/false)

# -------------------------------------------
# API Keys (Required)
# -------------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here
# Get your key: https://makersuite.google.com/app/apikey

FIRECRAWL_API_KEY=your_firecrawl_api_key_here
# Get your key: https://firecrawl.dev

# -------------------------------------------
# Database Configuration
# -------------------------------------------
DATABASE_URL=sqlite:///./real_estate.db
# SQLite (default): sqlite:///./real_estate.db
# PostgreSQL: postgresql://user:password@localhost:5432/real_estate

# -------------------------------------------
# Redis & Caching
# -------------------------------------------
REDIS_URL=redis://localhost:6379/0
# Redis URL for caching

ENABLE_CACHE=true
# Enable/disable Redis caching (true/false)

CACHE_TTL_SEARCH=3600
# Search cache TTL in seconds (default: 1 hour)

CACHE_TTL_ANALYSIS=86400
# Investment analysis cache TTL (default: 24 hours)

CACHE_TTL_TRENDS=43200
# Market trends cache TTL (default: 12 hours)

# -------------------------------------------
# Logging
# -------------------------------------------
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_FORMAT=json
# Options: json, text

# -------------------------------------------
# Streamlit Configuration (Optional)
# -------------------------------------------
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# -------------------------------------------
# Docker / Production Settings
# -------------------------------------------
# These are typically set in docker-compose.yml
# but can be overridden here if needed

# WORKERS=4
# Number of worker processes for production

# MAX_CONNECTIONS=100
# Maximum database connections
